#include<iostream>
#include <iomanip> 
using namespace std;    

int main(){
		int n;
		cin>>n;
		int count=n;
		int arr[n]={0};
	    for(int i=0;i<n-1;i++){
	    	int u,v;
	    	cin>>u>>v;
	    	if(arr[u-1]==0){
	    		arr[u-1]=1;
	    		count--;
			}
		}
		for(int i=0;i<n;i++){
			double temp=0.0000000000d;
			if(arr[i]==1){
				cout<<setprecision(10)<<temp<<" ";
			}
			else{
				temp = 1.0000000000d/count;
				cout<<setprecision(10)<<temp<<" ";
			}
		}
	cout<<endl;
	
	return 0;
}
